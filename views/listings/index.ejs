<% layout("layouts/boilerplate") %>
    <!-- <h3>All Listings</h3>
    <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->

    <style>
        #filters {
            display: flex;
            text-align: center;
            align-items: center;
            width: 100%;
            margin: 1rem 0 1rem;
            justify-content: space-between;
        }

        #filter-image {
            width: 2rem;
            height: 2rem;
        }

        /* 1. Scrollable Container for Icons */
        .filter-options {
            display: flex;
            align-items: center;
            overflow-x: auto;
            /* Enables horizontal scroll */
            flex-grow: 1;
            /* Takes up all remaining space */
        }

        /* Hide scrollbar for a cleaner look (optional) */
        .filter-options::-webkit-scrollbar {
            display: none;
        }

        .filter {
            display: flex;
            /* Turn individual filter into a flex container */
            flex-direction: column;
            /* Stack icon on top of text */
            align-items: center;
            /* Center horizontally */
            justify-content: center;
            /* Center vertically if needed */
            margin-right: 1rem;
            opacity: 0.7;
            flex-shrink: 0;
            cursor: pointer;
        }

        .filter div {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .filter p {
            font-size: 0.9rem;
            margin-top: 0.25rem;
            margin-bottom: 0;
        }

        .filter:hover {
            opacity: 1;
        }

        /* 2. Fixed Space for Tax Toggle */
        .tax-toggles {
            border: 1.8px solid rgba(0, 0, 0, 0.2);
            border-radius: 12px;
            text-align: center;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 1.5rem;
            /* Space between icons and toggle */
            display: flex;
            align-items: center;
            white-space: nowrap;
            /* Prevents text from wrapping */
            background-color: white;
        }

        .scroll-btn {
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            position: relative;
        }
    </style>


    <div id="filters">
        <div class="filter-options">
            <div class="scroll-btn" id="scroll-left">
                <i class="fa-solid fa-chevron-left"></i>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-swimming-pool"></i></div>
                <p>Amazing Pools</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tent"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-home"></i></div>
                <p>Homestays</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tractor"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tree"></i></div>
                <p>Treehouses</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-home"></i></div>
                <p>Homestays</p>
            </div>
            <div class="filter">
                <div><img id="filter-image"
                        src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtHF3dVlZ7ciptjlZ7YDXD2WDLMXE4F8bgKQ&s"
                        alt=""></div>
                <p>Oyo</p>
            </div>
            <div class="scroll-btn" id="scroll-right">
                <i class="fa-solid fa-chevron-right"></i>
            </div>
        </div>
        <div class="tax-toggles">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after tax</label>
            </div>
        </div>
    </div>



    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(listing of alllistings){ %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="listing-card card col">
                    <img src="<%= listing.image.url %>" class="card-img-top " alt="listingimage">
                    <div class="card-img-overlay">
                        <%= listing.location %>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b> <br>

                            <span class="price-info">
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                            </span>

                            <span class="tax-info">
                                &#8377; <%= (listing.price * 1.18).toLocaleString("en-IN") %> (Including GST)
                            </span>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

    <script>
        let taxSwitch = document.getElementById("flexSwitchCheckDefault");

        taxSwitch.addEventListener("change", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            let priceInfo = document.getElementsByClassName("price-info");

            for (let i = 0; i < taxInfo.length; i++) {
                if (taxSwitch.checked) {
                    taxInfo[i].style.display = "inline";
                    priceInfo[i].style.display = "none";
                } else {
                    taxInfo[i].style.display = "none";
                    priceInfo[i].style.display = "inline";
                }
            }
        });
    </script>