<%- layout("layouts/boilerplate.ejs") %>
    <br>
    <h3>Edit your Listing Detalis!</h3>
    <br>
    <div class="row">
        <div class="col-8 offset-2">
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate
                enctype="multipart/form-data" class="needs-validation">

                <div class="mb-3">
                    <label for="title" class="form-label"> Title: </label>
                    <input required type="text" class="form-control" name="listing[title]" value="<%= listing.title %>"
                        id="title">
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <input required type="text" class="form-control" name="listing[description]"
                        value="<%= listing.description %>" id="description">
                    <div class="invalid-feedback">
                        Please enter a description.
                    </div>
                </div>

                <div class="mb-3">
                    <p>Orignal Listing Image</p>
                    <img src="<%= originalImageUrl %>" class="card-img-top show-img" alt="...">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input type="file" class="form-control" name="listing[image]" id="image">
                    <div class="invalid-feedback">
                        Please upload a Image.
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price:</label>
                        <input required type="number" class="form-control" name="listing[price]"
                            value="<%= listing.price %>" id="price">
                        <div class="invalid-feedback">
                            Please enter a valid price.
                        </div>
                    </div>
                    <div class="col-md-8">
                        <label for="country" class="form-label">Country:</label>
                        <input required type="text" class="form-control" name="listing[country]"
                            value="<%= listing.country %>" id="country">
                        <div class="invalid-feedback">
                            Please enter a country.
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location: </label>
                    <input required type="text" class="form-control" name="listing[location]"
                        value="<%= listing.location %>" id="location">
                    <div class="invalid-feedback">
                        Please enter a validlocation.
                    </div>
                </div>

                <button class="btn btn-dark edt-btn">Update Listing</button>
                <br><br>
            </form>
        </div>
    </div>